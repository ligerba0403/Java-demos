package firstProject;

import java.util.Scanner;

public class GuessNumber {

	public static void main(String[] args) {
		
		Scanner scanner = new  Scanner(System.in);
		
		int helpNumber = 100;
		int counter = 0 ;
		
		int random = (int) (Math.random() * 100 + 1 );
		
		
		
		System.out.println("I kept a number in mind. You can guess it or you can get hint. Do not forget  You have 3 guesses. 0-guess 1 - get hint");
		int choice = scanner.nextInt();
		
		switch (choice) {
		case 0:
			System.out.println("What is your guess ?");
			int answer = scanner.nextInt();
			
			if (answer == random) {
				System.out.println("Your answer is correct !!!");
				counter += 5;
			}else {
				counter += 1;
				System.out.println("Your answer is false. You have "+counter + " tries");
				
			}
			break;
		case 1:
			
			break;
		default:
			break;
		}
	
	}
	

	
	
	public String hint(int x, int random) {
		String message = " ";
		
		if (random < x) {
			message = "This number is lower than " + x;
		}else {
			message = "This number is not lower than " + x;
		}
		return message;
		
	}

}
